{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": false,
    "target": "es2017",
    "types": ["node"],
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": ["src", "../commonsrc"]
}
